<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image, width: '100%' %>
    </div>
    <div class="col-md-5">
      <%= link_to "View All Items", portfolios_path %>
      <h1><%= @portfolio_item.title %></h1>
  <hr>
      <h2><%= @portfolio_item.subtitle %></h2>
      <p></p><%= @portfolio_item.body %></p>
  <hr>
      <h3>Technologies Used</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>