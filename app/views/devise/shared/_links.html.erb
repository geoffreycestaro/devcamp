<%- if controller_name != 'sessions' %>
   <%= button_to "Log in", new_session_path(resource_name), :class => 'btn btn-primary' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= button_to "Sign up", new_registration_path(resource_name), :class => 'btn btn-warning' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= button_to "Reset Password", new_password_path(resource_name), :class => 'btn btn-light' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= button_to "Re-Send Confirmation", new_confirmation_path(resource_name), :class => 'btn btn-info' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= button_to "Re-Send PW Reset", new_unlock_path(resource_name), :class => 'btn btn-danger' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :class => 'btn btn-success' %>
  <% end -%>
<% end -%>
